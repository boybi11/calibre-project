// SCALE PRESETS
.scale-down
	&-50
		transform scale(0.5, 0.5)
		filter blur(3px)
			
.scale-out
	transform scale(0, 0);
	
// BG COLOR PRESETS
.bg
	&-primary
		background-color #67a0bf
	
	&-success
		background-color #93d07a
		
	&-warning
		background-color #ef9638
	
	&-danger
		background-color #e02121
		
.bg-image
	&-full
		background-size cover
		background-position center
	&-contain
		background-size contain

.bg-no-repeat
	background-repeat no-repeat

.bg-pos
	&-center
		background-position center
	&-right
		background-position right
	&-left
		background-position left
		
// ICON STYLES
.icon
	display inline-block

	i
		color #fff
		display flex
		align-items center
		justify-content center
	
	&.icon-small
		i
			width 20px
			height 20px

	&.icon-medium
		i
			width 22px
			height 22px
	
	&.icon-large
		i
			width 24px
			height 24px
	
	&.icon-xlarge
		i
			width 26px
			height 26px
	
	&.icon-h1
		i
			width 35px
			height 35px
	
	&.icon-h2
		i
			width 30px
			height 30px
	&-circular
		border-radius 100%

// ZINDEX PRESETS
.zindex
	z-index 1
	
	&-2
		z-index 2
	
	&-3
		z-index 3
	
	&-4
		z-index 4
	
	&-5
		z-index 5

// DISPLAY PRESETS
.inline-block
	display inline-block
// POSITION PRESETS
.absolute
	position absolute
	
	&.left-0
		left 0
	
	&.right-0
		right 0
		
	&.top-0
		top 0
		
	&.bottom-0
		bottom 0
		
	&.upper-left
		top 10px
		left 10px
	
	&.upper-right
		top 10px
		right 10px
	
	&.bottom-right
		bottom 10px
		right 10px

.relative
	position relative

.fixed
	position fixed

	&.left-0
		left 0
	
	&.right-0
		right 0
		
	&.top-0
		top 0
		
	&.bottom-0
		bottom 0
	
.out-of-bounds
	transition .3s
	
	&-right
		right -100%
		
		&.in
			right 0
			z-index 2
			
// DIMENSIONS
.full-height
	height 100%

.full-width
	width 100%

// HOVER PRESETS
.transitioned
	transition .2s
	
	&-3
		transition .3s
		
.hover
	
	&-transitioned
		transition .2s
		
	&-scale
		&:hover
			transform scale(1.2, 1.2)
	&-scale-min
		&:hover
			transform scale(1.05, 1.05)
	&-jello
		&:hover
			animation-name jello !important
	
	&-opacity
		&:hover
			opacity 0.6

.btn-xs 
	font-size 10px
	padding 5px
	color #ffffff
	text-transform uppercase
// LOGO PRESETS
.logo
	&-small
		max-width 200px

// OVERFLOW
.overflow
	&-hidden
		overflow hidden
			
// THUMBNAIL PRESETS
.thumb
	max-width 50px
	
	&-20
		max-width 20px
	
	&-25
		max-width 25px
		
	&-30
		max-width 30px

	&-40
		max-width 40px

	&-50
		max-width 50px
	
	&-75
		max-width 75px
		
	&-100
		max-width 100px
	
	&-150
		max-width 150px
	
	&-200
		max-width 200px
		
// ANIMATION ATTRIBUTES
.animated
	
	&.delayed
	
		&-1
			animation-delay 1s
		
		&-half
			animation-delay 0.5s
	
	&.duration
		
		&-5
			animation-duration 5s
			
// TOOLTIP
.tooltip
	.tooltip-inner
		background rgba(0 ,0 ,0 ,0.8)
	
	&.right
		.tooltip-arrow
			border-right-color rgba(0 ,0 ,0 ,0.8)
	
	&.left
		.tooltip-arrow
			border-left-color rgba(0 ,0 ,0 ,0.8)
	
	&.top
		.tooltip-arrow
			border-top-color rgba(0 ,0 ,0 ,0.8)
	
	&.bottom
		.tooltip-arrow
			border-bottom-color rgba(0 ,0 ,0 ,0.8)

// OPACITY
.faded
	opacity .5
	
	&-light
		opacity .8
		
//STYLE FOR REGISTRATION modules
#registrationContainer
	height 100%
	width 500px
	background #fff
	right 0
	top 0
	transition .3s

#sideNav
	position fixed
	background #171d26
	width 300px
	height 100%
	right 0
	top 0
	z-index 999
	display flex
	flex-direction column
	transform translateX(100%)
	transition .3s

	&.in
		transform translateX(0%)

	.user-image
		padding 30px 20px 
		display flex
		align-items center
		justify-content center
		text-align center
		position relative

		.dismiss
			padding 10px
			cursor pointer
			position absolute
			right 10px
			top 10px

		img 
			width 130px
			height 130px
			object-fit cover
			object-position center
			border-radius 100%

		.user-name
			margin-top 10px
			font-size 18px

		.user-type
			opacity 0.5

	.side-links
		flex 1
		background #151515
		overflow hidden
		padding 20px 0px

		ul
			list-style none

			li
				padding 10px 0
				transition .3s

				i
					width 30px
				
				a
					color inherit
					
				&:hover 
					transform translateX(10px)

.navigation
	background #444
	color #fff
	.header-menu
		background rgba(0,0,0,.5)
		box-shadow 0 5px 10px 0 rgba(0,0,0,.2)
		
		.avatar-container
			background-color #000
			// background-image url('../img/bgs/test_bg.jpg')
			background-size cover
			background-position center
		
		.menu-container
			background rgba(0,0,0,.2);
			
		.exp-bar
			.bar
				width 100%
				height 15px
				background #aaa
				border-radius 3px
				overflow hidden
				
				.indicator
					width 50%
		
		.menu-toggable
			position relative
			transition .3s
			height 44px
			
			&.out
				width 0
				
			&.in
				width 270px
// DASHBOARD
#dashboard
	background-color #333
	// background url('../img/dashboard.jpg')
	background-size cover
	background-position center center
	background-attachment fixed
	min-height 100vh
	color #fff	
		
	.task-card
		width 28.33%
		margin 20px 2.5%
		background #252525
		border-radius 5px
		box-shadow 0 10px 20px -5px rgba(0, 0, 0, 0.3)

.leagues-page
	padding 20px 50px
	color #ffffff

	.league-list
		flex-wrap wrap

		.wrap-1-3
			width 33.33%

			.card
				border-radius 5px
				padding 20px
				box-shadow 0 5px 10px 0 rgba(0, 0, 0, 0.1), 0 0 0 1px #ccc
				margin 10px

				.task-actions
					opacity 0
					transform translateY(-20%)
					transition .3s

				.league-name
					font-size 18px

					i
						color #aaa
				
				.gm-name
					margin-top 5px

				&:hover
					.task-actions
						opacity 1
						transform translateY(0%)

.tasks-page
	background-size cover
	background-position center center
	background-attachment fixed
	min-height 100vh
	padding 50px
	color #fff

	.filter
		max-width 400px
		width 100%
		
		.clan-filter
			.clan-holder
				padding 30px
				background #111
				border-radius 5px

				.clan-card
					padding 10px
					margin 5px 0
					border-radius 5px
					transition .2s

					i
						margin-right 5px
						
					&:hover
						background #ffffff
						color #111111

	.tasks-list
		padding 30px
		background #111
		margin-left 30px
		border-radius 5px

		.tasks
			margin-top 20px

			.task-card
				background #ffffff
				color #111111
				padding 20px 
				border-radius 5px
				margin-bottom 10px
				
				.task-id
					color #888

				.task-name
					font-size 20px
	
	#taskForm
		position fixed
		left 0
		top 0
		width 100%
		height 100%
		background rgba(255, 255, 255, 0.5)
		display flex
		align-items center
		justify-content center
		overflow-x auto
		
		.form-box
			background #111
			border-radius 5px
			padding 20px
			width 100%
			max-width 500px
			
			.title
				margin 0
				padding 0
				
			.form
				.form-group
					margin-top 20px

.modal
	position fixed
	width 100%
	height 100%
	background rgba(0, 0, 0, 0.5)
	display flex
	align-items center
	justify-content center
	color #111
	transform scale(0)
	opacity 0
	transition .3s
	transition-delay .3s

	.modal-box
		background #fff
		padding 20px
		border-radius 5px
		min-width 500px
		transform scale(0)
		transition 0.3s;

	&.in
		opacity 1
		transform scale(1)
		transition-delay 0s
		transition opacity .3s

		.modal-box
			transform scale(1)
			transition-delay 0.3s


.loader
	background rgba(0, 0, 0, 0.5)
	position fixed
	width 100%
	height 100%
	left 0
	top 0
	align-items center
	justify-content center
	display none

	i
		font-size 30px

	&.in
		display flex
