.animated-placeholder
	width 100%
	position relative
	
	label
		position absolute
		left 10px
		top 15px
		color #111
		opacity .3
		transition .2s
		font-weight normal
		z-index 1
	
	.field
		z-index 2
		position relative
		
	input,
	select
		height auto
		width 100%
		padding 15px 10px 5px
		border none
		border-bottom 1px solid #aaa
		box-shadow none
		margin-bottom 10px
		position relative
		background transparent
		font-size 12px
		
		&:focus
			box-shadow none
		
	&.active
		
		label
			font-size 10px
			left 0
			top 0
			opacity 0.9
			color #6899e8